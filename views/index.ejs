<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>
<body>
    
    <%- include('./partials/nav.ejs') // relative path to the partial %>

    <div class="blogs content">
        <h2>All Blogs</h2>
        <%  // checking if there are any blogs
            if(blogs.length > 0) {
                blogs.forEach(blog => { %>
        <!-- Adding the route parameters to the route -->
        <a class="single" href="/blogs/<%= blog.id %>">            
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
            <br>
        </a>
        <%      });
            } else { %>

        <p><%= "There are no blogs, yet" %></p>

        <%  } %>
    </div>

    <%- include('./partials/footer.ejs'); %>
</body>
</html>